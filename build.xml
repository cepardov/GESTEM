<project name="gestem" default="init" basedir=".">
    <property name="src" location="/"/>

    <target name="init">

        <buildnumber/>
        <replaceregexp file="build.gradle"
                       match="version\s+&quot;*.*&quot;"
                       replace="version &quot;0.${build.number}&quot;"
                       byline="true"
        />

    </target>
</project>